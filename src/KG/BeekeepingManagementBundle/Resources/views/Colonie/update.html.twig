{% extends "KGBeekeepingManagementBundle::layout.html.twig" %}

{% block stylesheets %}
    {{ parent() }}
    {% stylesheets filter='cssrewrite ?yui_css'  
        'css/bootstrap_switch/bootstrap-switch.css' %}
        <link rel="stylesheet" href="{{ asset_url }}" type="text/css">
    {% endstylesheets %}  
    {{ form_stylesheet(form) }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% javascripts filter='?yui_js'
        'js/bootstrap_switch/bootstrap-switch.js'
        '@KGBeekeepingManagementBundle/Resources/public/js/colonie/update.js'%}
        <script src="{{ asset_url }}" type="text/javascript"></script>  
    {% endjavascripts %}
    {{ form_javascript(form) }}
{% endblock %}

{% block title %}{{ parent() }} - Modifier une colonie{% endblock %}

{% block menu %}
    {% include 'KGBeekeepingManagementBundle::menuRuche.html.twig' %}
{% endblock menu %}

{% block panel_title %}
    <div class="row">
        <div class="col-xs-12">
            <h4>Modification de la colonie</h4>
        </div>
    </div>
{% endblock %}

{% block panel_body %}
             
    {{ form_start(form, { 'style': 'horizontal', 'col_size': 'md' }) }}

    <fieldset>
        <legend>Colonnie</legend>
        {{ form_row(form.colonie.affectation, {'label': 'Affectation :', 'label_col': 4, 'widget_col': 5})  }}
    </fieldset>          
    <fieldset>
        <legend>Reine</legend>
            <div class="row">
                <div class="col-md-offset-4 col-md-6">   
                    {{ form_row(form.reine.marquage, {'attr': {'data-label-text' : "Marquage", 'data-on-text': "Oui", 'data-off-text': 'Non'}}) }}
                    {{ form_row(form.reine.clippage, {'attr': {'data-label-text' : "Clippage", 'data-on-text': "Oui", 'data-off-text': 'Non'}}) }}               
                </div>
            </div>    
    </fieldset>             
            
    {{ form_rest(form) }}

    <div class="form-group">
        <div class="col-md-12">
            <button type="submit" class="btn btn-primary pull-right">
                {{ icon('floppy-o') }} Sauvegarder
            </button>
        </div>        
    </div>

    {{ form_end(form) }}         
{% endblock %}