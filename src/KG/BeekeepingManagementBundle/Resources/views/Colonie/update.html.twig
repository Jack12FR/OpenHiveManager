{# src/KG/BeekeepingManagementBundle/Resources/views/Colonie/update.html.twig #}

{% extends "KGBeekeepingManagementBundle::layout.html.twig" %}

{% block stylesheets %}
    {{ parent() }}
    {% stylesheets filter='cssrewrite' 'css/bootstrap_switch/bootstrap-switch.css' %}
        <link rel="stylesheet" href="{{ asset_url }}" type="text/css">
    {% endstylesheets %}  
    {{ form_stylesheet(form) }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% javascripts 'js/bootstrap_switch/bootstrap-switch.js'
                    '@KGBeekeepingManagementBundle/Resources/public/js/colonie/update.js'%}
        <script src="{{ asset_url }}" type="text/javascript"></script>  
    {% endjavascripts %}
    {{ form_javascript(form) }}
{% endblock %}

{% block title %}{{ parent() }} - Modifier une colonie{% endblock %}

{% form_theme form "KGBeekeepingManagementBundle::form_layout.html.twig" %}

{% block ruchers %}{{ colonie.ruche.emplacement.rucher.nom }}{% endblock %}

{% block panel_title %}
    <div class="row">
        <div class="col-xs-12">
            <h4>Modification de la colonie de la ruche {{ colonie.ruche.nom }}</h4>
        </div>
    </div>
{% endblock %}

{% block form_error %}
    {{ form_errors(form.affectation) }}
    {{ form_errors(form) }}
{% endblock %}

{% block panel_body %}
             
    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

    <fieldset>
        <legend>Colonnie</legend>

        <div class="form-group">
            {{ form_label(form.affectation, "Affectation :", {'label_attr': {'class': 'col-sm-5 col-md-4 control-label'}}) }}
            <div class="col-sm-5 col-md-5">
                {{ form_widget(form.affectation, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>      

    </fieldset>

    <fieldset> 
        <legend>Reine</legend>

        <div class="form-group">
            <label class="col-sm-5 col-md-4 control-label" for="checkboxes">Marquage :</label>
            <div class="col-sm-5 col-md-5">
              {{ form_widget(form.reine.marquage, {'attr': {'class': 'form-control', 'data-on-text': "Oui", 'data-off-text': 'Non'}}) }}
            </div>
        </div>     

        <div class="form-group">
            <label class="col-sm-5 col-md-4 control-label" for="checkboxes">Clippage :</label>
            <div class="col-sm-5 col-md-5">
              {% if colonie.reine.clippage %}
                  {{ form_widget(form.reine.clippage, {'attr': {'class': 'form-control', 'data-on-text': "Oui", 'data-off-text': 'Non'}, 'disabled': 'true'}) }}
              {% else %}    
                  {{ form_widget(form.reine.clippage, {'attr': {'class': 'form-control', 'data-on-text': "Oui", 'data-off-text': 'Non'}}) }}
              {% endif %}
            </div>
        </div>                 
    </fieldset>                
    {{ form_rest(form) }}

    <div class="form-group">
        <div class="col-md-12">
            <button type="submit" class="btn btn-primary pull-right">
                <i class="glyphicon glyphicon-floppy-disk"></i>
                Sauvegarder
            </button>
        </div>        
    </div>

    {{ form_end(form) }}         
{% endblock %}