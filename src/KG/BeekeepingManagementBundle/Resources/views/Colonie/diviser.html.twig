{# src/KG/BeekeepingManagementBundle/Resources/views/Colonie/diviser.html.twig #}

{% extends "KGBeekeepingManagementBundle::layout.html.twig" %}

{% block stylesheets %}
    {{ parent() }}
    {{ form_stylesheet(form) }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% javascripts '@KGBeekeepingManagementBundle/Resources/public/js/colonie/diviser.js' %}
        <script src="{{ asset_url }}" type="text/javascript"></script>  
        <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
        <script src="{{ path('fos_js_routing_js', {'callback': 'fos.Router.setData'}) }}"></script>
    {% endjavascripts %} 
    {{ form_javascript(form) }}
{% endblock %}

{% block ruchers %}{{ colonieMere.ruche.emplacement.rucher.nom }}{% endblock %}
{% block title %}{{ parent() }} - Diviser une colonie{% endblock %}

{% block panel_title %}
    <div class="row">
        <div class="col-xs-12">
            <h4>Division de la colonie de la ruche {{ colonieMere.ruche.nom }}</h4>
        </div>
    </div>
{% endblock %}

{% block panel_body %}
                  
    {{ form_start(form, { 'style': 'horizontal' }) }}

    <fieldset> 
        <legend>Emplacement</legend>        
        {{ form_row(form.rucher, {'label': 'Rucher :'})  }}
        {{ form_row(form.emplacement, {'label': 'Emplacement :'})  }}            
    </fieldset> 
            
    <fieldset> 
        {{ form_row(form.nom, {'label': 'Nom de la ruche :'})  }}
        {{ form_row(form.matiere, {'label': 'Mati√®re :'})  }}
        {{ form_row(form.corps.type, {'label': 'Type :'})  }}
        {{ form_row(form.corps.soustype, {'label': 'Nombre de cadres :'})  }}
        {{ form_row(form.image.file, {'label': 'Photo :'})  }}
    </fieldset>
    
    <fieldset>
        <legend>Colonie</legend>                
        {{ form_row(form.colonie.dateColonie, {'label': 'Date de la division :'})  }}
        {{ form_row(form.colonie.affectation, {'label': 'Affectation :'})  }}
        {{ form_row(form.corps.nbnourriture, {'label': 'Cadres de nourriture :'})  }}
        {{ form_row(form.corps.nbcouvain, {'label': 'Cadres de couvain :'})  }}                                
    </fieldset>                

    {{ form_rest(form) }}

    <div class="form-group">
        <div class="col-md-12">
            <button type="submit" class="btn btn-primary pull-right">
                <i class="glyphicon glyphicon-floppy-disk"></i>
                Sauvegarder
            </button>
        </div>        
    </div>

    {{ form_end(form) }}         

{% endblock %}