{# src/KG/BeekeepingManagementBundle/Resources/views/Colonie/diviser.html.twig #}

{% extends "KGBeekeepingManagementBundle::layout.html.twig" %}

{% block stylesheets %}
    {{ parent() }}
    {{ form_stylesheet(form) }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% javascripts '@KGBeekeepingManagementBundle/Resources/public/js/colonie/diviser.js' %}
        <script src="{{ asset_url }}" type="text/javascript"></script>  
        <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
        <script src="{{ path('fos_js_routing_js', {'callback': 'fos.Router.setData'}) }}"></script>
    {% endjavascripts %} 
    {{ form_javascript(form) }}
{% endblock %}

{% block ruchers %}{{ colonieMere.ruche.emplacement.rucher.nom }}{% endblock %}
{% block title %}{{ parent() }} - Diviser une colonie{% endblock %}

{% block panel_title %}
    <div class="row">
        <div class="col-xs-12">
            <h4>Division de la colonie de la ruche {{ colonieMere.ruche.nom }}</h4>
        </div>
    </div>
{% endblock %}

{% block panel_body %}
                  
    {{ form_start(form, { 'style': 'horizontal', 'col_size': 'md' }) }}

    <fieldset> 
        <legend>Emplacement</legend>        
        {{ form_row(form.rucher, {'label': 'Rucher :', 'label_col': 4, 'widget_col': 5})  }}
        {{ form_row(form.emplacement, {'label': 'Emplacement :', 'label_col': 4, 'widget_col': 5})  }}            
    </fieldset> 
            
    <fieldset> 
        {{ form_row(form.nom, {'label': 'Nom de la ruche :', 'label_col': 4, 'widget_col': 5})  }}
        {{ form_row(form.matiere, {'label': 'Mati√®re :', 'label_col': 4, 'widget_col': 5})  }}
        {{ form_row(form.corps.type, {'label': 'Type :', 'label_col': 4, 'widget_col': 5})  }}
        {{ form_row(form.corps.soustype, {'label': 'Nombre de cadres :', 'label_col': 4, 'widget_col': 5})  }}
        {{ form_row(form.image.file, {'label': 'Photo :', 'label_col': 4, 'widget_col': 5})  }}
    </fieldset>
    
    <fieldset>
        <legend>Colonie</legend>                
        {{ form_row(form.colonie.dateColonie, {'label': 'Date de la division :', 'label_col': 4, 'widget_col': 5})  }}
        {{ form_row(form.colonie.affectation, {'label': 'Affectation :', 'label_col': 4, 'widget_col': 5})  }}
        {{ form_row(form.corps.nbnourriture, {'label': 'Cadres de nourriture :', 'label_col': 4, 'widget_col': 5})  }}
        {{ form_row(form.corps.nbcouvain, {'label': 'Cadres de couvain :', 'label_col': 4, 'widget_col': 5})  }}                                
    </fieldset>                

    {{ form_rest(form) }}

    <div class="form-group">
        <div class="col-md-12">
            <button type="submit" class="btn btn-primary pull-right">
                {{ icon('floppy-disk') }} Sauvegarder
            </button>
        </div>        
    </div>

    {{ form_end(form) }}         

{% endblock %}