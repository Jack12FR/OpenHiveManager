{# src/KG/BeekeepingManagementBundle/Resources/views/Colonie/diviser.html.twig #}

{% extends "KGBeekeepingManagementBundle::layout.html.twig" %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% javascripts '@KGBeekeepingManagementBundle/Resources/public/js/colonie/diviser.js' %}
        <script src="{{ asset_url }}" type="text/javascript"></script>  
        <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
        <script src="{{ path('fos_js_routing_js', {'callback': 'fos.Router.setData'}) }}"></script>
    {% endjavascripts %}    
{% endblock %}

{% block title %}{{ parent() }} - Diviser une colonie{% endblock %}

{% form_theme form "KGBeekeepingManagementBundle::form_layout.html.twig" %}

{% block ruchers %}{{ colonieMere.ruche.emplacement.rucher.nom }}{% endblock %}

{% block panel_title %}
    <div class="row">
        <div class="col-xs-12">
            <h4>Division de la colonie {{ colonieMere.appellation }}</h4>
        </div>
    </div>
{% endblock %}

{% block form_error %}
    {{ form_errors(form) }}  
{% endblock %}

{% block panel_body %}
                  
    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

    <fieldset> 

            <legend>Emplacement</legend>        
            <div class="form-group">
            {{ form_label(form.rucher, "Rucher :", {'label_attr': {'class': 'col-sm-5 col-md-4 control-label'}}) }}
            <div class="col-sm-5 col-md-5">
                {{ form_widget(form.rucher, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>    

        <div class="form-group">
            {{ form_label(form.emplacement, "Emplacement :", {'label_attr': {'class': 'col-sm-5 col-md-4 control-label'}}) }}
            <div class="col-sm-5 col-md-5">
                {{ form_widget(form.emplacement, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div> 
            
    </fieldset> 
            
    <fieldset> 

            <legend>Ruche</legend>            
            <div class="form-group">
                {{ form_label(form.ruche.nom, "Nom de la ruche :", {'label_attr': {'class': 'col-sm-5 col-md-4 control-label'}}) }}
                <div class="col-sm-5 col-md-5">
                    {{ form_widget(form.ruche.nom, {'attr': {'class': 'form-control'}}) }}
                </div>  
            </div> 

            <div class="form-group">
                {{ form_label(form.ruche.matiere, "Matière :", {'label_attr': {'class': 'col-sm-5 col-md-4 control-label'}}) }}
                <div class="col-sm-5 col-md-5">
                    {{ form_widget(form.ruche.matiere, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div> 

            <div class="form-group">
                {{ form_label(form.ruche.corps.type, "Type :", {'label_attr': {'class': 'col-sm-5 col-md-4 control-label'}}) }}
                <div class="col-sm-5 col-md-5">
                    {{ form_widget(form.ruche.corps.type, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>  

            <div class="form-group">
                {{ form_label(form.ruche.corps.soustype, "Nombre de cadres :", {'label_attr': {'class': 'col-sm-5 col-md-4 control-label'}}) }}
                <div class="col-sm-5 col-md-5">
                    {{ form_widget(form.ruche.corps.soustype, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(form.ruche.image.file, "Photo :", {'label_attr': {'class': 'col-sm-5 col-md-4 control-label'}}) }}
                <div class="col-sm-2 col-md-2">
                    {{ form_widget(form.ruche.image.file) }}
                </div>
            </div>

        </fieldset>
    
    <fieldset>

        <legend>Colonie</legend>
    
        <div class="alert alert-warning" role="alert"><i class="glyphicon glyphicon-warning-sign"></i> Les cadres de miel et de couvains placés dans cette ruche seront prélevés de la ruche de la colonie mère</div>
                
        <div class="form-group">
            {{ form_label(form.appellation, "Appellation :", {'label_attr': {'class': 'col-sm-5 col-md-4 control-label'}}) }}
            <div class="col-sm-5 col-md-5">
                {{ form_widget(form.appellation, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>     

        <div class="form-group">
            {{ form_label(form.dateColonie, "Date de la division :", {'label_attr': {'class': 'col-sm-5 col-md-4 control-label'}}) }}
            <div class="col-sm-5 col-md-5">
                {{ form_widget(form.dateColonie, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div> 
            
        <div class="form-group">
            {{ form_label(form.affectation, "Affectation :", {'label_attr': {'class': 'col-sm-5 col-md-4 control-label'}}) }}
            <div class="col-sm-5 col-md-5">
                {{ form_widget(form.affectation, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>                            
        
        <div class="form-group">
            {{ form_label(form.ruche.corps.nbmiel, "Cadres de miel :", {'label_attr': {'class': 'col-sm-5 col-md-4 control-label'}}) }}
            <div class="col-sm-5 col-md-5">
                {{ form_widget(form.ruche.corps.nbmiel, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>  

        <div class="form-group">
            {{ form_label(form.ruche.corps.nbcouvain, "Cadres de couvain :", {'label_attr': {'class': 'col-sm-5 col-md-4 control-label'}}) }}
            <div class="col-sm-5 col-md-5">
                {{ form_widget(form.ruche.corps.nbcouvain, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>                                   
         
    </fieldset>                

    {{ form_rest(form) }}

    <div class="form-group">
        <div class="col-md-offset-1 col-md-10">
            <div class="pull-right">
                <a href="{{ app.request.headers.get('referer') }}" class="btn btn-default">
                    <i class="glyphicon glyphicon-remove"></i>
                    Annuler
                </a>

                <button type="submit" class="btn btn-primary">
                    <i class="glyphicon glyphicon-floppy-disk"></i>
                    Sauvegarder
                </button>
            </div>
        </div>        
    </div>

    {{ form_end(form) }}         

{% endblock %}