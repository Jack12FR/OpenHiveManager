{% extends "KGBeekeepingManagementBundle::layout.html.twig" %}

{% block stylesheets %}
    {{ parent() }}
    {{ form_stylesheet(form) }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}

{% block title %}{{ parent() }} - Créer une récolte{% endblock %}

{% block menu %}
    {% include 'KGBeekeepingManagementBundle::menuRuche.html.twig' %}
{% endblock menu %}

{% block panel_title %}
    <div class="row">
        <div class="col-xs-12">
            <h4>Création d'une récolte</h4>
        </div>
    </div>
{% endblock %}
    
{% block panel_body %}
              
    {{ form_start(form, { 'style': 'horizontal', 'col_size': 'md' }) }}

        <fieldset> 
            <legend>Informations sur la récolte</legend>    
            {{ form_row(form.date, {'label': 'Date :', 'label_col': 4, 'widget_col': 5})  }}
            {{ form_row(form.typemiel, {'label': 'Type de miel :', 'label_col': 4, 'widget_col': 5})  }}
        </fieldset>
        
        <fieldset> 
            <legend>Nombre de cadres à récolter</legend>
            {% for hausse in colonie.ruche.hausses %}
                {{ form_row(attribute(form, 'hausse_' ~ hausse.id), {'label': 'Hausse n°' ~ loop.index ~ ' (' ~ hausse.nbplein ~ '  cadres pleins)' , 'label_col': 4, 'widget_col': 5})  }}
            {% endfor %}
        </fieldset>

    {{ form_rest(form) }}
    
    <div class="form-group">
        <div class="col-md-12">
            <button type="submit" class="btn btn-primary pull-right">
                {{ icon('floppy-disk') }} Sauvegarder
            </button>
        </div>        
    </div>

    {{ form_end(form) }}         

{% endblock %}