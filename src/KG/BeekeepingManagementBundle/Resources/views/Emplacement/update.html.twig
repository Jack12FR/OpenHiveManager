{# src/KG/BeekeepingManagementBundle/Resources/views/Emplacement/update.html.twig #}

{% extends "KGBeekeepingManagementBundle::layout.html.twig" %}

{% block title %}{{ parent() }} - Modifier un emplacement{% endblock %}

{% block ruchers %}{{ emplacement.rucher.nom }}{% endblock %}

{% block panel_title %}
    <div class="row">
        <div class="col-xs-12">
            <h4>Modification d'un emplacement</h4>
        </div>
    </div>
{% endblock %}
    
{% block panel_body %}
                  
    {{ form_start(form, { 'style': 'horizontal', 'col_size': 'md' }) }}
        {{ form_row(form.nom, {'label': 'Nom de l\'emplacement :', 'label_col': 4, 'widget_col': 5})  }}
        {{ form_row(form.soleil, {'label': 'Taux d\'exposition au soleil :', 'label_col': 4, 'widget_col': 5})  }}
        {{ form_row(form.orientation, {'label': 'Orientation :', 'label_col': 4, 'widget_col': 5})  }}
    {{ form_rest(form) }}

    <div class="form-group">
        <div class="col-md-12">
            <button type="submit" class="btn btn-primary pull-right">
                {{ icon('floppy-disk') }}
                Sauvegarder
            </button>
        </div>        
    </div>

    {{ form_end(form) }}         

{% endblock %}