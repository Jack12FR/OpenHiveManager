{% extends "KGBeekeepingManagementBundle::layout.html.twig" %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}

{% block title %}{{ parent() }} - Emplacement{% endblock %}

{% block menu %}
    {% include 'KGBeekeepingManagementBundle::menuEmplacement.html.twig' %}
{% endblock menu %}

{% block panel_title %}
    <div class="row">
        <div class="col-xs-12">
            <h4>Emplacement {{ emplacement.nom }}</h4>
        </div>
    </div>    
{% endblock %}


{% block panel_body %}  
<div class="row">
    <div class="col-md-12">
        <table class="table">    
            <tbody>
                <tr>
                    <td><strong>Nom</strong></td>
                    <td>{{ emplacement.nom }}</td>
                </tr>
                <tr>
                    <td><strong>Taux d'exposition au soleil</strong></td>
                    <td>{{ emplacement.soleil }}</td>
                </tr>
                <tr>
                    <td><strong>Orientation</strong></td>
                    <td>{{ emplacement.orientation.libelle }}</td>
                </tr>
            </tbody>
      </table>
    </div>
</div>
{% endblock %}