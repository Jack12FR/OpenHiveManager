{# src/KG/BeekeepingManagementBundle/Resources/views/Ruche/add.html.twig #}

{% extends "KGBeekeepingManagementBundle::layout.html.twig" %}

{% block stylesheets %}
    {{ parent() }}
    {% stylesheets filter='cssrewrite' 'css/bootstrap_switch/bootstrap-switch.css' %}
        <link rel="stylesheet" href="{{ asset_url }}" type="text/css">
    {% endstylesheets %}  
    {{ form_stylesheet(form) }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% javascripts 'js/bootstrap_switch/bootstrap-switch.js'
                    '@KGBeekeepingManagementBundle/Resources/public/js/colonnie/add.js'%}
        <script src="{{ asset_url }}" type="text/javascript"></script>  
    {% endjavascripts %}
    {{ form_javascript(form) }}
{% endblock %}

{% block title %}{{ parent() }} - Créer une ruche{% endblock %}

{% form_theme form "KGBeekeepingManagementBundle::form_layout.html.twig" %}

{% block breadcrumbs %}
    {{ parent() }}
    {#<a href="{{ path('kg_beekeeping_management_view_exploitation', { 'exploitation_id': exploitation.id }) }}" class="btn btn-primary">{{ exploitation.nom }}</a>#}
{% endblock %} 
            
{% block screen %}   
    {% for flashMessage in app.session.flashbag.get('danger') %}
        {% if loop.first %}
            <div class="alert alert-danger" role="alert">
        {% endif %}
                <i><span class="glyphicon glyphicon-remove-sign"></span> {{ flashMessage }}</i>
        {% if loop.last %}        
            </div>
        {% endif %}
    {% endfor %}     
    
    {{ form_errors(form.nom) }}
    {{ form_errors(form.type) }}
    {{ form_errors(form.matiere) }}
    {{ form_errors(form.nbCadres) }}
    {{ form_errors(form.image.file) }}
    {{ form_errors(form) }}
             
    <div class="panel panel-primary">

        <div class="panel-heading">
            <h3 class="panel-title">Création d'une colonnie</h3>
        </div>

        <div class="panel-body">                
            {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

            <fieldset> 
                
                <legend>Ruche</legend>            
                <div class="form-group">
                    {{ form_label(form.nom, "Nom de la ruche :", {'label_attr': {'class': 'col-sm-5 col-md-4 control-label'}}) }}
                    <div class="col-sm-5 col-md-5">
                        {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                    </div>  
                </div>

                <div class="form-group">
                    {{ form_label(form.type, "Type de ruche :", {'label_attr': {'class': 'col-sm-5 col-md-4 control-label'}}) }}
                    <div class="col-sm-5 col-md-5">
                        {{ form_widget(form.type, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>    

                <div class="form-group">
                    {{ form_label(form.matiere, "Matière :", {'label_attr': {'class': 'col-sm-5 col-md-4 control-label'}}) }}
                    <div class="col-sm-5 col-md-5">
                        {{ form_widget(form.matiere, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div> 

                <div class="form-group">
                    {{ form_label(form.nbCadres, "Nombre de cadres max :", {'label_attr': {'class': 'col-sm-5 col-md-4 control-label'}}) }}
                    <div class="col-sm-5 col-md-5">
                        {{ form_widget(form.nbCadres, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>  

                <div class="form-group">
                    {{ form_label(form.image.file, "Photo :", {'label_attr': {'class': 'col-sm-5 col-md-4 control-label'}}) }}
                    <div class="col-sm-2 col-md-2">
                        {{ form_widget(form.image.file) }}
                    </div>
                </div>
                    
            </fieldset>
                    
            <fieldset>
                
                <legend>Colonnie</legend>
                
                <div class="form-group">
                    {{ form_label(form.colonnie.nom, "Nom :", {'label_attr': {'class': 'col-sm-5 col-md-4 control-label'}}) }}
                    <div class="col-sm-5 col-md-5">
                        {{ form_widget(form.colonnie.nom, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>     

                <div class="form-group">
                    {{ form_label(form.colonnie.affectation, "Affectation :", {'label_attr': {'class': 'col-sm-5 col-md-4 control-label'}}) }}
                    <div class="col-sm-5 col-md-5">
                        {{ form_widget(form.colonnie.affectation, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>    

                <div class="form-group">
                    {{ form_label(form.colonnie.anneeColonnie, "Année :", {'label_attr': {'class': 'col-sm-5 col-md-4 control-label'}}) }}
                    <div class="col-sm-5 col-md-5">
                        {{ form_widget(form.colonnie.anneeColonnie, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>    

                <div class="form-group">
                    {{ form_label(form.colonnie.provenanceColonnie, "Provenance :", {'label_attr': {'class': 'col-sm-5 col-md-4 control-label'}}) }}
                    <div class="col-sm-5 col-md-5">
                        {{ form_widget(form.colonnie.provenanceColonnie, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>    

                <div class="form-group">
                    {{ form_label(form.colonnie.etat, "Etat :", {'label_attr': {'class': 'col-sm-5 col-md-4 control-label'}}) }}
                    <div class="col-sm-5 col-md-5">
                        {{ form_widget(form.colonnie.etat, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>                      

                <div class="form-group">
                    {{ form_label(form.colonnie.agressivite, "Agressivité :", {'label_attr': {'class': 'col-sm-5 col-md-4 control-label'}}) }}
                    <div class="col-sm-5 col-md-5">
                        {{ form_widget(form.colonnie.agressivite, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>                                

                <div class="form-group">
                    {{ form_label(form.colonnie.reine.race, "Race :", {'label_attr': {'class': 'col-sm-5 col-md-4 control-label'}}) }}
                    <div class="col-sm-5 col-md-5">
                        {{ form_widget(form.colonnie.reine.race, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>  
                    
                <div class="form-group">
                    {{ form_label(form.colonnie.reine.anneeReine, "Année :", {'label_attr': {'class': 'col-sm-5 col-md-4 control-label'}}) }}
                    <div class="col-sm-5 col-md-5">
                        {{ form_widget(form.colonnie.reine.anneeReine, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>    

                <div class="form-group">
                    {{ form_label(form.colonnie.reine.provenanceReine, "Provenance :", {'label_attr': {'class': 'col-sm-5 col-md-4 control-label'}}) }}
                    <div class="col-sm-5 col-md-5">
                        {{ form_widget(form.colonnie.reine.provenanceReine, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>    

                <div class="form-group">
                    <label class="col-sm-5 col-md-4 control-label" for="checkboxes">Marquage :</label>
                    <div class="col-sm-5 col-md-5">
                      {{ form_widget(form.colonnie.reine.marquage, {'attr': {'class': 'form-control', 'data-on-text': "Oui", 'data-off-text': 'Non'}}) }}
                    </div>
                </div>     

                <div class="form-group">
                    <label class="col-sm-5 col-md-4 control-label" for="checkboxes">Clippage :</label>
                    <div class="col-sm-5 col-md-5">
                      {{ form_widget(form.colonnie.reine.clippage, {'attr': {'class': 'form-control', 'data-on-text': "Oui", 'data-off-text': 'Non'}}) }}
                    </div>
                </div>               
            </fieldset>
                    
            {{ form_rest(form) }}

            <div class="form-group">
                <div class="col-md-offset-1 col-md-10">
                    <div class="pull-right">
                        <a href="{{ app.request.headers.get('referer') }}" class="btn btn-default">
                            <i class="glyphicon glyphicon-remove"></i>
                            Annuler
                        </a>

                        <button type="submit" class="btn btn-primary">
                            <i class="glyphicon glyphicon-floppy-disk"></i>
                            Sauvegarder
                        </button>
                    </div>
                </div>        
            </div>
                             
            {{ form_end(form) }}         
        </div>       
    </div>

{% endblock %}