{% extends "KGBeekeepingManagementBundle::layout.html.twig" %}

{% block javascripts %}
    {{ parent() }}
    {% javascripts filter='?uglifyjs2'
        'assets/js/plugins/loaders/progressbar.min.js' %}
        <script src="{{ asset_url }}" type="text/javascript"></script>          
    {% endjavascripts %}
{% endblock %}

{% block cover %}
    {% include 'KGBeekeepingManagementBundle:Ruche:cover.html.twig' with {'ruche' : ruche} only %}
{% endblock %}
    
{% set visite = ruche.colonie.visites|last %}
    
{% block toolbar %}
    {% include 'KGBeekeepingManagementBundle:Ruche:toolbar.html.twig' with {'colonie' : ruche.colonie} only %}    
{% endblock %} 

{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <div class="tabbable">
                <div class="tab-content">  
                    {% if visite %}
                        <div class="tab-pane fade in active" id="lastvisite">
                            <div class="col-md-12">
                                <!-- View visite -->
                                {% include 'KGBeekeepingManagementBundle:Visite:includeView.html.twig' with {'visite' : visite, 'title' : 'Dernière visite'} only %}                            
                            </div>
                        </div>                                                                     
                    {% endif %}   
                    
                    {% if taches %}
                        <div class="tab-pane fade {% if not visite %}in active{% endif %}" id="taches">             
                            <div class="row">
                                <div class="col-md-12">
                                    <!-- Tasks grid -->
                                    {% include 'KGBeekeepingManagementBundle:Tache:includeView.html.twig' with {'taches' : taches} only %}                                
                                </div>    
                            </div>       
                        </div> 
                    {% endif %}
                            
                    <div class="tab-pane fade {% if not visite and taches is empty %}in active{% endif %}" id="infos">    
                        <div class="row">   
                            <div class="col-md-12">
                                <!-- View ruche -->
                                {% include 'KGBeekeepingManagementBundle:Ruche:includeView.html.twig' with {'ruche' : ruche} only %} 
                            </div>
                        </div>                                    
                    </div>
                </div>                           
            </div>
        </div>    
    </div>                                                                       
{% endblock %}