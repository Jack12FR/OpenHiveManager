{# src/KG/BeekeepingManagementBundle/Resources/views/Rucher/view.html.twig #}

{% extends "KGBeekeepingManagementBundle::layout.html.twig" %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}

{% block title %}{{ parent() }} - Ruche{% endblock %}

{% block screen %}
    <strong>{{ app.user.exploitationEnCours.nom }}</strong>  
    <hr>    
    
    {% for flashMessage in app.session.flashbag.get('success') %}
        {% if loop.first %}
            <div class="alert alert-success" role="alert">
        {% endif %}
                <i><span class="glyphicon glyphicon-ok-sign"></span> {{ flashMessage }}</i>
        {% if loop.last %}        
            </div>
        {% endif %}
    {% endfor %}

    <div class="panel panel-default">
        <div class="panel-body">
            <div class="row">
                <div class="col-md-3">
                    <div class="thumbnail">
                    {% if ruche.image is not null %}
                        <img src="{{ asset(ruche.image.webPath) }}" alt="{{ ruche.image.alt }}">
                    {% else %}
                        <img src="../../../logo.gif" alt="logo">
                    {% endif %} 
                    </div>
                </div>
                <div class="col-md-5">
                    <h3 class="panel-title"><strong><font size="5">Ruche {{ ruche.nom }}</font></strong></h3>
                </div>
                <div class="col-md-4">
                    <div class="pull-right">
                        <a title="Editer" data-toggle="modal" href="{{ path('kg_beekeeping_management_add_ruche') }}" class="btn btn-primary"><span class="glyphicon glyphicon-pencil"></span> Editer</a>
                        <a title="Supprimer" data-toggle="modal" href="{{ path('kg_beekeeping_management_delete_ruche', { 'id' : ruche.id }) }}" class="btn btn-danger"><span class="glyphicon glyphicon-trash"></span> Supprimer</a>
                    </div> 
                </div>        
            </div>
                    
            <hr>
        </div>
    </div>
{% endblock %}