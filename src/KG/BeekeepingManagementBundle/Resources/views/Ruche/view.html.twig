{# src/KG/BeekeepingManagementBundle/Resources/views/Ruche/view.html.twig #}

{% extends "KGBeekeepingManagementBundle::layout.html.twig" %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}

{% block title %}{{ parent() }} - Ruche{% endblock %}

{% block breadcrumbs %}
    {{ parent() }}
    <a href="{{ path('kg_beekeeping_management_view_exploitation', { 'exploitation_id': ruche.exploitation.id }) }}" class="btn btn-info">{{ ruche.exploitation.nom }}</a>
    {% if ruche.rucher %}<a href="{{ path('kg_beekeeping_management_view_rucher', { 'rucher_id': ruche.rucher.id }) }}" class="btn btn-info">{{ ruche.rucher.nom }}</a>{% endif %}
    <a href="{{ path('kg_beekeeping_management_view_ruche', { 'ruche_id': ruche.id }) }}" class="btn btn-info">{{ ruche.nom }}</a>
{% endblock %} 

{% block screen %}  
    {% for flashMessage in app.session.flashbag.get('success') %}
        {% if loop.first %}
            <div class="alert alert-success" role="alert">
        {% endif %}
                <i><span class="glyphicon glyphicon-ok-sign"></span> {{ flashMessage }}</i>
        {% if loop.last %}        
            </div>
        {% endif %}
    {% endfor %}

    <div class="panel panel-default">
        <div class="panel-body">
            <div class="row">
                <div class="col-md-3">
                    <div class="thumbnail">
                    {% if ruche.image is not null %}
                        <img src="{{ asset(ruche.image.webPath) }}" alt="{{ ruche.image.alt }}">
                    {% else %}
                        <img src="../../../../../logo.gif" alt="logo">
                    {% endif %} 
                    </div>
                </div>
                <div class="col-md-5">
                    <h3 class="panel-title"><strong><font size="5">Ruche {{ ruche.nom }}</font></strong></h3>
                </div>
                <div class="col-md-4">
                    <div class="pull-right">
                        {#<a title="Editer" data-toggle="modal" href="{{ path('kg_beekeeping_management_add_ruche', { 'rucher_id' : rucher.id }) }}" class="btn btn-primary"><span class="glyphicon glyphicon-pencil"></span> Editer</a>#}
                        <a title="Supprimer" data-toggle="modal" href="{{ path('kg_beekeeping_management_delete_ruche', { 'ruche_id' : ruche.id }) }}" class="btn btn-danger"><span class="glyphicon glyphicon-trash"></span> Supprimer</a>
                    </div> 
                </div>        
            </div>
                    
            <hr>
               
            <div class="row">
                <div class="col-md-12">
                    <div class="panel panel-primary">
                        <div class="panel-heading">
                            <span class="glyphicon glyphicon-list"></span> Liste des visites
                            <a title="Créer une visite" data-toggle="modal" href="{{ path('kg_beekeeping_management_add_visite', { 'ruche_id' : ruche.id }) }}" class="btn btn-info btn-xs pull-right"><span class="glyphicon glyphicon-plus-sign"></span> Créer une visite</a>
                        </div>
                        <div class="panel-body">
                            <ul class="list-group">
                                {% for visite in visites %}
                                    <li class="list-group-item">
                                        {#{{ visite.date }}#}
                                        <div class="pull-right action-buttons">
                                            <a title="Afficher la visite" href="{{ path('kg_beekeeping_management_view_visite', { 'visite_id': visite.id }) }}" class="btn btn-xs btn-success pull-right"><span class="glyphicon glyphicon-eye-open"></span> Afficher</a>
                                        </div>
                                    </li>
                                {% endfor %}
                            </ul>
                        </div>
                        <div class="panel-footer">
                            <div class="row">
                                <div class="col-md-6">
                                    <span class="label label-info">{{ nbVisites }} visites</span>
                                </div>
                                <div class="col-md-6">
                                    {% include "KGBeekeepingManagementBundle::pagination.html.twig" %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>  
        </div>
    </div>
{% endblock %}