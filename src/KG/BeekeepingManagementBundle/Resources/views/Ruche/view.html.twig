{% extends "KGBeekeepingManagementBundle::layout.html.twig" %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}

{% block title %}{{ parent() }} - Ruche{% endblock %}

{% block ruchers %}{{ ruche.emplacement.rucher.nom }}{% endblock %}

{% set lastVisite = ruche.colonie.visites|last %}
                                
{% block panel_title %}
    <div class="row">
        <div class="col-xs-6">
            <h4>Ruche {{ ruche.nom }}</h4>
        </div>
        <div class="col-xs-6">
            <span class="pull-right">
                <div class="dropdown">
                    <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                      Menu
                      <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuDivider">
                        <li><a title="Modifier la ruche" href="{{ path('kg_beekeeping_management_update_ruche', { 'ruche_id' : ruche.id }) }}">{{ icon('pencil') }} Modifier la ruche</a></li>
                        {%if ruche.colonie and ruche.emplacement %}
                            {% if pagination is not empty %}
                                {% if lastVisite.date|date('Y-m-d') < "now"|date('Y-m-d') %}
                                    <li><a title="Créer une visite" href="{{ path('kg_beekeeping_management_add_visite', { 'colonie_id' : ruche.colonie.id }) }}">{{ icon('plus') }} Créer une visite</a></li>
                                {% endif %}
                            {% else %}
                            <li><a title="Créer une visite" href="{{ path('kg_beekeeping_management_add_visite', { 'colonie_id' : ruche.colonie.id }) }}">{{ icon('plus') }} Créer une visite</a></li>
                            {% endif %}
                        {% endif %}
                        {% if ruche.hausses is not empty %}
                            <li><a title="Créer une récolte" href="{{ path('kg_beekeeping_management_add_recolte', { 'colonie_id' : ruche.colonie.id }) }}">{{ icon('open') }} Créer une récolte</a></li>
                        {% endif %}                      
                        <li><a title="Transhumer" href="{{ path('kg_beekeeping_management_add_transhumance', { 'colonie_id' : ruche.colonie.id }) }}">{{ icon('plane') }} Transhumer</a></li>
                    </ul>
                </div> 
            </span>
        </div>
    </div>    
{% endblock %}

                   
{% block panel_body %}
    {% set menu = knp_menu_get('KGBeekeepingManagementBundle:RucheMenu:mainMenu', [], {'colonie': ruche.colonie} ) %}
    {{ knp_menu_render(menu, { 'style': 'justified-tabs' }) }}
    
    
    <h3>Détails</h3>
    <div class="row">
        <div class="col-sm-5">
            <table class="table">  
                <tbody>
                    <tr>
                        <td><strong>Rucher</strong></td>
                        <td><a title="Afficher le rucher" href="{{ path('kg_beekeeping_management_view_rucher', { 'rucher_id': ruche.emplacement.rucher.id }) }}">{{ ruche.emplacement.rucher.nom }}</a></td>
                    </tr>                                  
                    <tr>
                        <td><strong>Type</strong></td>
                        <td>{{ ruche.corps.type.libelle }} {{ ruche.corps.nbcadres }}</td>
                    </tr>
                    <tr>
                        <td><strong>Matière</strong></td>
                        <td>{{ ruche.matiere.libelle }}</td>
                    </tr>
                    <tr>
                        <td><strong>Emplacemet</strong></td>
                        <td>{{ ruche.emplacement.nom }}</td>
                    </tr> 
                    <tr>
                        <td><strong>% de soleil</strong></td>
                        <td>{{ ruche.emplacement.soleil }}</td>
                    </tr>
                    <tr>
                        <td><strong>Orientation</strong></td>
                        <td>{{ ruche.emplacement.orientation.libelle }}</td>
                    </tr>                     
                </tbody>
            </table>
        </div>            
        <div class="col-sm-4">                                      
            <table class="table">
                <tbody>
                    <tr>
                        <td><strong>Affectation</strong></td>
                        <td>{{ ruche.colonie.affectation.libelle }}</td>
                    </tr>
                    <tr>
                        <td><strong>Cadres nourriture</strong></td>
                        <td>{% if ruche.colonie.ruche %}{{ ruche.corps.nbnourriture }}{% else %}0{% endif %}</td>
                    </tr>                    
                    <tr>
                        <td><strong>Cadres couvain</strong></td>
                        <td>{% if ruche.colonie.ruche %}{{ ruche.corps.nbcouvain }}{% else %}0{% endif %}</td>
                    </tr> 
                     
                </tbody>
            </table>                                  
        </div>
        <div class="col-sm-3" align="center"> 
            {% if ruche.image is not null %}
                <img src="{{ asset(ruche.image.webPath) }}" alt="{{ ruche.image.alt }}" class="img-thumbnail img-responsive">
            {% else %}
                <img src="{{ asset('img/ruche/' ~ ruche.corps.type.libelle ~'.jpg') }}" alt="Photo par défaut" class="img-thumbnail img-responsive">
            {% endif %}       
        </div>                    
    </div> 

    <h3>Détails</h3>
        
    <div class="row">
        {% set reine = ruche.colonie.remerages|last.reine %}
        <div class="col-sm-5">
            <table class="table">  
                <tbody>
                    <tr>
                        <td><strong>Numéro</strong></td>
                        <td>{{ ruche.colonie.numero }}</td>
                    </tr>
                    <tr>
                        <td><strong>Race</strong></td>
                        <td>{{ reine.race.libelle }}</td>
                    </tr>
                    <tr>
                        <td><strong>Date de naissance</strong></td>
                        <td>{{ ruche.colonie.dateColonie|date("m/Y") }}</td>
                    </tr>
                    <tr>
                        <td><strong>Colonie mère</strong></td>
                        <td>
                            {% if reine.reineMere %}
                                <a title="Afficher la colonie" href="{{ path('kg_beekeeping_management_view_colonie', { 'colonie_id': colonie.remerages|last.reine.reineMere.remerage.colonie.id }) }}">{{ colonie.remerages|last.reine.reineMere.remerage.colonie.numero }}</a>
                            {% else %}
                                Inconnue
                            {% endif %}
                        </td>
                    </tr> 
                    <tr>
                        <td><strong>Origine</strong></td>
                        <td>{{ ruche.colonie.origineColonie.libelle }}</td>
                    </tr>
                    <tr>
                        {% set long = reine.reinesFilles|length %}
                        <td><strong>Colonie{% if long > 1 %}s{% endif %} fille{% if long > 1 %}s{% endif %}</strong></td>
                        <td>
                            {% if reine.reinesFilles is empty %}
                                Aucune
                            {% endif %}
                            {% for reineFille in reine.reinesFilles %}
                                {% if not loop.first %}
                                    - 
                                {% endif %}
                                <a title="Afficher la colonie" href="{{ path('kg_beekeeping_management_view_colonie', { 'colonie_id': reineFille.remerage.colonie.id }) }}">{{ reineFille.remerage.colonie.numero }}</a>
                            {% endfor %}
                        </td>
                    </tr>                    
                </tbody>
            </table>
        </div>            
        <div class="col-sm-4">                                   
            <table class="table">
                <tbody> 
                    <tr>
                        <td><strong>Etat</strong></td>
                        <td>{{ ruche.colonie.etat.libelle }}</td>
                    </tr>                    
                    <tr>
                        <td><strong>Agressivité</strong></td>
                        <td>{{ ruche.colonie.agressivite.libelle }}</td>
                    </tr>
                    <tr>
                        <td><strong>Année reine</strong></td>
                        <td>{% if reine.anneeReine %}{{ reine.anneeReine|date("Y") }}{% endif %}</td>
                    </tr>
                    <tr>
                        <td><strong>Marquage reine</strong></td>
                        <td>                                   
                            {% if reine.marquage %}
                                {% set annee = reine.anneeReine|date("Y")|last %}
                                {% if annee == 0 or annee == 5 %}{% set marquage = 'Bleu' %}{% endif %}
                                {% if annee == 1 or annee == 6 %}{% set marquage = 'Blanc' %}{% endif %}
                                {% if annee == 2 or annee == 7 %}{% set marquage = 'Jaune' %}{% endif %}
                                {% if annee == 3 or annee == 8 %}{% set marquage = 'Rouge' %}{% endif %}
                                {% if annee == 4 or annee == 9 %}{% set marquage = 'Vert' %}{% endif %}
                            {% else %}    
                                {% set marquage = 'Aucun' %}
                            {% endif %}
                            {{ marquage }}
                        </td>
                    </tr>
                    <tr>
                        <td><strong>Clippage reine</strong></td>
                        <td>{% if reine.clippage %} Oui {% else %} Non {% endif %}</td>
                    </tr>                                                     
                </tbody>
            </table>                                  
        </div>
        <div class="col-sm-3" align="center"> 
            <img src="{{ asset('img/abeille/' ~ reine.race.libelle  ~ '.jpg')}}" alt="{{ reine.race.libelle }}" class="img-thumbnail img-responsive">    
        </div>                    
    </div>                    
                    
                    
                    
                    
                    
    {% if ruche.hausses is not empty %}                
    <div class="row">    
        <div class=" col-md-12">
            <hr>            
            <h4>Hausses</h4>
            <ul class="list-group">
            {% for hausse in ruche.hausses %}
                <li class="list-group-item">
                    <div class="progress">
                      {% set pourcent = ( hausse.nbplein * 100 ) / ( hausse.nbcadres ) %}
                      <div class="progress-bar progress-bar-warning" role="progressbar" aria-valuenow="{{ pourcent }}" aria-valuemin="0" aria-valuemax="100" style="width: {{ pourcent }}%;">
                        <span class="sr-only">Miel</span>
                      </div>
                    </div>                                    
                </li>                                       
            {% endfor %}
            </ul>
            <span class="label label-warning">Miel</span>
        </div>    
    </div> 
    {% endif %}

    {% if pagination is not empty %}
    <div class="row">    
        <div class=" col-md-12"> 
            <hr>            
            <h4>Visites</h4> 
            <div class="table-responsive">
                <table id="mytable" class="table table-bordred table-striped">
                    <thead>
                        <th>Date</th>
                        <th>Activite</th>
                        <th>Etat</th>
                        <th>Cadres nourriture</th>
                        <th>Cadres couvain</th>
                        <th>Cellules royales</th>
                        <th>Nourrissement</th>
                        <th>Traitement</th>
                        <th></th>
                    </thead>
                    <tbody> 
                        {% for visite in pagination %}
                            <tr>
                                <td><a title="Afficher la visite" href="{{ path('kg_beekeeping_management_view_visite', { 'visite_id': visite.id }) }}">{{ visite.date|date('d/m/Y') }}</a></td>
                                <td>{{ visite.activite.libelle }}</td>
                                <td>{{ visite.etat.libelle }}</td>
                                <td>{{ visite.nbnourriture }}</td>
                                <td>{{ visite.nbcouvain }}</td>
                                <td>{% if visite.celroyales %}Oui{% else %}Non{% endif %}</td>
                                <td>{% if visite.nourrissement %}Oui{% else %}Non{% endif %}</td>
                                <td>{% if visite.traitement %}Oui{% else %}Non{% endif %}</td>
                                <td>{% if lastVisite == visite %}<a title="Editer" href="{{ path('kg_beekeeping_management_update_visite', { 'visite_id' : visite.id }) }}" class="btn btn-xs btn-warning">{{ icon('pencil') }}</a>{% endif %}</td>
                            </tr>    
                        {% endfor %}
                    </tbody>
                </table>                
            </div>
            <div class="row">
                <div class="col-md-12 navigation" align="right">
                    {{ knp_pagination_render(pagination) }}
                </div>  
            </div>                         
        </div>
    </div>  
    {% endif %}                
{% endblock %}