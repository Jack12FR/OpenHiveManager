{% extends "KGBeekeepingManagementBundle::layout.html.twig" %}

{% block stylesheets %}
    {{ parent() }}
    {{ form_stylesheet(form) }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% javascripts filter='?uglifyjs2'
        'assets/js/plugins/forms/selects/select2.min.js'
        'assets/js/plugins/forms/styling/uniform.min.js'
        '@KGBeekeepingManagementBundle/Resources/public/js/visite/add.js'%}
        <script src="{{ asset_url }}" type="text/javascript"></script>  
    {% endjavascripts %}
    {{ form_javascript(form) }}
{% endblock %}

{% block cover %}
    <div class="profile-cover">
        {% if colonie.ruche.rucher.image is not null %}
            <div class="profile-cover-img" style="background-image: url({{ asset(colonie.ruche.rucher.image.webPath) }})"></div>
        {% else %}
            <div class="profile-cover-img" style="background-image: url({{ asset("img/rucher.jpg") }})"></div>
        {% endif %}    
        <div class="media">
            <div class="media-left">
                <a href="#" class="profile-thumb">
                    {% if colonie.ruche.image is not null %}
                        <img src="{{ asset(colonie.ruche.image.webPath) }}" alt="{{ colonie.ruche.image.alt }}" class="img-circle">
                    {% else %}
                        <img src="{{ asset('img/ruche/' ~ colonie.ruche.corps.type.libelle ~'.jpg') }}" alt="Photo par défaut" class="img-circle">
                    {% endif %}                       
                </a>
            </div>

            <div class="media-body">
                <h1>Rucher {{ colonie.ruche.rucher.nom }} <small class="display-block">Ruche {{ colonie.ruche.nom }}</small></h1>
            </div>                    
        </div>
    </div>
{% endblock %} 

{% block body %}

    <!-- Centered forms -->
    <div class="row">
        <div class="col-md-12">
            {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
                <div class="row">
                    <div class="col-md-6 col-md-offset-3">
                        <div class="panel panel-flat">
                            <div class="panel-heading">
                                <h5 class="panel-title">Création d'une tâche</h5>
                            </div>

                            <div class="panel-body">
                                <div class="form-group">
                                    {{ form_label(form.date, "A faire le :*", { 'label_attr': {'class': 'col-lg-3'} }) }}
                                    <div class="col-lg-9">
                                        {{ form_widget(form.date) }}
                                        {{ form_errors(form.date) }}
                                    </div>
                                </div>    
                                    
                                <div class="form-group">
                                    {{ form_label(form.priorite, "Priorité :*", { 'label_attr': {'class': 'col-lg-3'} }) }}
                                    <div class="col-lg-9">
                                        {{ form_widget(form.priorite) }}
                                        {{ form_errors(form.priorite) }}
                                    </div>
                                </div> 

                                <div class="form-group">
                                    {{ form_label(form.resume, "Résumé :*", { 'label_attr': {'class': 'col-lg-3'} }) }}
                                    <div class="col-lg-9">
                                        {{ form_widget(form.resume) }}
                                        {{ form_errors(form.resume) }}
                                    </div>
                                </div> 
                                    
                                <div class="form-group">
                                    {{ form_label(form.description, "Description :", { 'label_attr': {'class': 'col-lg-3'} }) }}
                                    <div class="col-lg-9">
                                        {{ form_widget(form.description) }}
                                        {{ form_errors(form.description) }}
                                    </div>
                                </div> 
                                    
                                {{ form_rest(form) }}
                                <div class="text-right">
                                    <button type="submit" class="btn btn-primary">Sauvegarder <i class="icon-arrow-right14 position-right"></i></button>
                                </div>  
                            </div>
                        </div>
                    </div>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
    <!-- /form centered -->
{% endblock %}