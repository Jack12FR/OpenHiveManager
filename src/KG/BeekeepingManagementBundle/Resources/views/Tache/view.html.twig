{% extends "KGBeekeepingManagementBundle::layout.html.twig" %}

{% block title %}{{ parent() }} - Visite{% endblock %}

{% block menu %}
    {% include 'KGBeekeepingManagementBundle::menuTache.html.twig' %}
{% endblock menu %}

{% block panel_title %}
    <div class="row">
        <div class="col-xs-6">
            <h4>Tâche</h4>
        </div>
    </div>    
{% endblock %}

{% block panel_body %}
    <div class="row">
        <div class="col-md-12">
            <table class="table">    
                <tbody>                    
                    <tr>
                        <td><strong>Date prévisionnelle</strong></td>
                        <td>{{ tache.date|date('d/m/Y') }}</td>
                    </tr>    
                    <tr>
                        <td><strong>Priorite</strong></td>
                        <td>{{ tache.priorite.libelle }}</td>
                    </tr>  
                    <tr>
                        <td><strong>Résumé</strong></td>
                        <td>{{ tache.resume }}</td>
                    </tr>                       
                    <tr>
                        <td><strong>Description</strong></td>
                        <td>{% if tache.description %}{{ tache.description }}{% else %}Non renseignée{% endif %}</td>
                    </tr>                   
                </tbody>
          </table>
        </div>
    </div>             
{% endblock %}
