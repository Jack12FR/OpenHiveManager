{% if taches is not empty %}       
    <div class="row">
        {% for tache in taches %}
            {% if tache.priorite.id == 1 %}
                {% set couleur = 'danger' %}  
            {% elseif tache.priorite.id == 2 %}
                {% set couleur = 'primary' %}   
            {% elseif tache.priorite.id == 3 %}
                {% set couleur = 'success' %}      
            {% endif %}                                              

            <div class="col-md-6">
                <div class="panel border-left-lg border-left-{{ couleur }}">
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-md-8">
                                <h6 class="no-margin-top">{{ tache.resume }}</h6>
                                <p class="mb-15">{{ tache.description }}</p>
                            </div>

                            <div class="col-md-4">
                                <ul class="list task-details">
                                    <li>{{ tache.date|date('d/m/Y') }}</li>
                                    <li><span class="bg-{{ couleur }}">{{ tache.priorite.libelle }}</span></li>
                                </ul>
                            </div>
                        </div>
                    </div>

                    <div class="panel-footer">
                        <ul class="pull-right">
                            {% include 'KGBeekeepingManagementBundle:Tache:toolbar.html.twig' with {'tache' : tache} only %}
                        </ul>
                    </div>
                </div>
            </div>     
            {% if loop.index0 is not divisible by(2)%}
                </div>
                <div class="row">
            {% endif %}    
        {% endfor %}
    </div>                         
{% else %}    
    <center>Aucune</center>       
{% endif %} 