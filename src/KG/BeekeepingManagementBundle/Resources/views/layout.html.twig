{% extends 'KGSiteBundle::layout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}  
    {% stylesheets filter='cssrewrite' 
        '@KGBeekeepingManagementBundle/Resources/public/css/layout.css'%}
        <link rel="stylesheet" href="{{ asset_url }}" type="text/css">
    {% endstylesheets %}        
{% endblock %}

{% block menu_user %}
    
{% endblock %}
    
{% block body %}
    {% if is_granted('ROLE_USER') %}
        {{ parent() }}
        <div class="col-xs-12">
            <div class="row">
                <div class="btn-group btn-breadcrumb">
                {% block breadcrumbs %}
                    <a href="{{ path('kg_beekeeping_management_home') }}" class="btn btn-primary"><i class="glyphicon glyphicon-home"></i></a>
                {% endblock %} 
                </div>
                <hr>
                {% block screen %}
                {% endblock %} 
            </div>
        </div>
    {% endif %}     
{% endblock %}                