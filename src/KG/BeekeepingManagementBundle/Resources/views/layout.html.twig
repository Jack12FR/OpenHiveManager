{% extends 'KGSiteBundle::layout.html.twig' %}

{% block menu_user %}
    <li><a href="{{ path('kg_beekeeping_management_home_exploitation') }}">Mes exploitations</a></li>
{% endblock %}

{% block menu_exploitation %}
    {{ render(controller("KGBeekeepingManagementBundle:Exploitation:menu")) }}
{% endblock %}
    
{% block body %}
    {% if is_granted('ROLE_USER') %}
        {{ parent() }}
        <div class="col-xs-5 col-sm-4 col-md-3 col-lg-3">
        <!-- Left -->
            
            <hr>
            <ul class="nav nav-pills nav-stacked">
                <li {% block exploitation %}{% endblock %}><a href="{{ path('kg_beekeeping_management_view_exploitation', {'id': app.session.get('exploitation_id') }) }}" title="Exploitation">Exploitation</a></li>
                <li {% block rucher %}{% endblock %}><a href="{{ path('kg_beekeeping_management_home_rucher') }}" title="Rucher">Rucher</a></li>
            </ul>
        </div><!-- /span-3 -->
        <div class="col-xs-7 col-sm-8 col-md-9 col-lg-9">
        <!-- Right -->
            {% block screen %}
            {% endblock %} 
        </div><!--/col-span-9-->
    {% endif %}     
{% endblock %}                