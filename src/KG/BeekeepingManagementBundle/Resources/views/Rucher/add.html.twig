{# src/KG/BeekeepingManagementBundle/Resources/views/Rucher/add.html.twig #}

{% extends "::layout.html.twig" %}

{% block stylesheets %}
    <script src="https://code.jquery.com/jquery-1.11.2.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ol3/3.6.0/ol.css" type="text/css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/ol3/3.6.0/ol.js"></script>
{% endblock %}

{% block title %}{{ parent() }} - Créer un rucher{% endblock %}

{% block rucher %}class="active"{% endblock %}

{% block style %}
    #map{
      width:100%;
      height:350px;
    }   
{% endblock %}

{% block body %}
    <strong>Rucher</strong>  
    <hr>
    
    <div class="well">
        {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
        <fieldset>
            <legend>Création d'un nouveau rucher</legend>
        
            <div class="form-group">
                <label class="col-sm-5 col-md-4 control-label" for="kg_beekeepingmanagementbundle_rucher_nom">Nom du rucher :</label>
              <div class="col-sm-5 col-md-5">
                    {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
              </div>
            </div>

            <div class="form-group">
                <label class="col-sm-5 col-md-4 control-label">Photo :</label>
                <div class="col-sm-2 col-md-2">
                    {{ form_widget(form.image) }}
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-5 col-md-4 control-label">Date de création :</label>
                <div class="col-sm-7 col-md-7">
                    {{ form_widget(form.dateCreation) }}
                </div>
            </div>

            {{ form_widget(form.location.latitude) }}
            {{ form_widget(form.location.longitude) }}

            <div class="col-md-offset-2 col-md-8">
                <h4><center>Localisez le rucher sur la carte</center></h4>
                {% set latitude = 'kg_beekeepingmanagementbundle_rucher_location_latitude' %}
                {% set longitude = 'kg_beekeepingmanagementbundle_rucher_location_longitude' %}                
                {% include "::map.html.twig" %}
            </div>    
            
            {{ form_rest(form) }}

            <div class="form-group">
                <div class="col-md-offset-1 col-md-10">
                    <div class="pull-right">
                        <a href="{{ path('kg_beekeeping_management_home_rucher') }}" class="btn btn-default">
                            <i class="glyphicon glyphicon-remove"></i>
                            Annuler
                        </a>

                        <button type="submit" class="btn btn-primary">
                            <i class="glyphicon glyphicon-floppy-disk"></i>
                            Sauvegarder
                        </button>
                    </div>
                </div>        
            </div>
        </fieldset>            
        {{ form_end(form) }}
    </div>

{% endblock %}