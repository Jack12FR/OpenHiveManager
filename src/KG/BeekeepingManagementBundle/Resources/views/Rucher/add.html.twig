{# src/KG/BeekeepingManagementBundle/Resources/views/Rucher/add.html.twig #}

{% extends "::layout.html.twig" %}

{% block title %}{{ parent() }} - Créer un rucher{% endblock %}

{% block body %}
    <strong>Créer un rucher</strong>  
    <hr>
    
    <div class="well">
        {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

            <legend>Création d'un nouveau rucher</legend>
        
            <div class="form-group">
                <label class="col-sm-5 col-md-4 control-label" for="kg_beekeepingmanagementbundle_rucher_nom">Nom du rucher :</label>
              <div class="col-sm-5 col-md-5">
                    {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
              </div>
            </div>

            <div class="form-group">
                <label class="col-sm-5 col-md-4 control-label" for="kg_beekeepingmanagementbundle_rucher_image">Photo :</label>
                <div class="col-sm-2 col-md-2">
                    {{ form_widget(form.image) }}
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-5 col-md-4 control-label" for="kg_beekeepingmanagementbundle_rucher_dateCreation">Date de création :</label>
                <div class="col-sm-7 col-md-7">
                    {{ form_widget(form.dateCreation) }}
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-4 col-md-4 control-label" for="kg_beekeepingmanagementbundle_rucher_location_latitude">Latitude :</label>
                <div class="col-sm-7 col-md-7">
                    {{ form_widget(form.location.latitude, {'attr': {'type': 'hidden'}}) }}
                    {#{{ form_widget(form.location.latitude) }}#}
                </div>
            </div>
                               
            <div class="form-group">
                <label class="col-sm-4 col-md-4 control-label" for="kg_beekeepingmanagementbundle_rucher_location_longitude">Longitude :</label>
                <div class="col-sm-7 col-md-7">
                    {{ form_widget(form.location.longitude) }}
                </div>
            </div>
                    
            {% include "::map.html.twig" %}
            
            {{ form_rest(form) }}

            <div class="form-group">
                <div class="pull-right">
                <a href="{{ path('kg_beekeeping_management_homepage_rucher') }}" class="btn btn-default">
                    <i class="glyphicon glyphicon-remove"></i>
                    Annuler
                </a>

                <button type="submit" class="btn btn-primary">
                    <i class="glyphicon glyphicon-floppy-disk"></i>
                    Sauvegarder
                </button>
                </div>
            </div>
                    
        {{ form_end(form) }}
    </div>

{% endblock %}