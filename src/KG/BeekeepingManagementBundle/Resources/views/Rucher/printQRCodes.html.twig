{% extends "KGBeekeepingManagementBundle::layout.html.twig" %}

{% block stylesheets %}
    {{ parent() }}
    {{ form_stylesheet(form) }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% javascripts filter='?uglifyjs2'
        'assets/js/plugins/forms/styling/uniform.min.js'
        '@KGBeekeepingManagementBundle/Resources/public/js/rucher/qrcodes.js' %}
        <script src="{{ asset_url }}" type="text/javascript"></script>       
    {% endjavascripts %}
    {{ form_javascript(form) }}
{% endblock %}

{% block cover %}
    {% include 'KGBeekeepingManagementBundle:Rucher:cover.html.twig' with {'rucher' : rucher} only %} 
{% endblock %} 

{% block toolbar %}
    {% include 'KGBeekeepingManagementBundle:Rucher:toolbarBack.html.twig' with {'rucher' : rucher} only %}                  
{% endblock %}

{% block body %}  
    
    <!-- Centered forms -->
    <div class="row">
        <div class="col-md-12">
            {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
                <div class="row">
                    <div class="col-md-6 col-md-offset-3">
                        <div class="panel panel-flat">
                            <div class="panel-heading">
                                <h5 class="panel-title">Choix des QR codes à générer</h5>
                            </div>
                                
                            <div class="panel-body">
                                
                                {% for ruche in form.ruches %}
                                    {% set index = ruche.vars.value %}
                                    {% set entity = form.ruches.vars.choices[index].data %}
                                    <div class="form-group">
                                        {{ form_label(ruche, entity.nom, {'label_attr': {'class': 'col-lg-8'}} ) }}
                                        {{ form_widget(ruche, {'attr': {'class': 'col-lg-4 checkbox checkbox-right styled', 'checked': 'checked'}}) }}  
                                        {{ form_errors(ruche) }}
                                    </div>
                                {% endfor %}

                                {{ form_rest(form) }}
                                <div class="text-right">
                                    <button type="submit" class="btn btn-primary">Générer <i class="icon-arrow-right14 position-right"></i></button>
                                </div>  
                            </div>
                        </div>
                    </div>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
    <!-- /form centered -->
{% endblock %}
