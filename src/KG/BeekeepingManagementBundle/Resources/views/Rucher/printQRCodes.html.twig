{% extends "KGBeekeepingManagementBundle::layout.html.twig" %}

{% block stylesheets %}
    {{ parent() }}
    {% stylesheets filter='cssrewrite, ?uglifycss'
        'css/bootstrap_switch/bootstrap-switch.css' %}
        <link rel="stylesheet" href="{{ asset_url }}" type="text/css">
    {% endstylesheets %}  
    {{ form_stylesheet(form) }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% javascripts filter='?uglifyjs2'
        'js/bootstrap_switch/bootstrap-switch.js'
        '@KGBeekeepingManagementBundle/Resources/public/js/rucher/qrcodes.js' %}
        <script src="{{ asset_url }}" type="text/javascript"></script>       
    {% endjavascripts %}
    {{ form_javascript(form) }}
{% endblock %}

{% block title %}{{ parent() }} - Rucher{% endblock %}

{% block panel_title %}
    <div class="row">
        <div class="col-xs-12">
            <h4>Choix des QR codes à générer</h4>
        </div>
    </div>    
{% endblock %}

{% block panel_body %}     
    {{ form_start(form, { 'style': 'horizontal', 'col_size': 'md' }) }} 
        {% for ruche in form.ruches %}
            {% set index = ruche.vars.value %}
            {% set entity = form.ruches.vars.choices[index].data %}
            <div class="form-group">
                {{ form_label(ruche, entity.nom, {'label_attr': {'class': 'col-md-5 control-label'}} ) }}
                <div class="col-md-7">
                    {{ form_widget(ruche, {'attr': {'class': 'form-control', 'checked': true, 'data-on-text': "Oui", 'data-off-text': 'Non'}}) }}
                </div>
            </div>
        {% endfor %}
                
    {{ form_rest(form) }}

    <div class="form-group">
        <div class="col-md-12">
            <button type="submit" class="btn btn-primary pull-right">
                {{ icon('file-text-o') }} Générer les QR codes
            </button>
        </div>        
    </div>

    {{ form_end(form) }}                   
{% endblock %}
