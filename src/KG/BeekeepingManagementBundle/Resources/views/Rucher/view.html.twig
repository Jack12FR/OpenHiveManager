{# src/KG/BeekeepingManagementBundle/Resources/views/Rucher/view.html.twig #}

{% extends "KGBeekeepingManagementBundle::layout.html.twig" %}

{% block stylesheets %}
    {{ parent() }}
    {% stylesheets 
        'css/ol/ol.css' 
        '@KGBeekeepingManagementBundle/Resources/public/css/weather/*'
        '@KGBeekeepingManagementBundle/Resources/public/css/map/display_map.css' %}
        <link rel="stylesheet" href="{{ asset_url }}" type="text/css">
    {% endstylesheets %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% javascripts '@KGBeekeepingManagementBundle/Resources/public/js/weather/*'
                   'js/ol/ol.js'
                   '@KGBeekeepingManagementBundle/Resources/public/js/map/display_map.js' %}
        <script src="{{ asset_url }}" type="text/javascript"></script>
    {% endjavascripts %}
{% endblock %}

{% block title %}{{ parent() }} - Rucher{% endblock %}

{% block breadcrumbs %}
    {{ parent() }}
    <li><a href="{{ path('kg_beekeeping_management_view_exploitation', { 'exploitation_id': rucher.exploitation.id }) }}">{{ rucher.exploitation.nom }}</a></li>
    <li><a href="{{ path('kg_beekeeping_management_view_rucher', { 'rucher_id': rucher.id }) }}">{{ rucher.nom }}</a></li>
{% endblock %} 

{% block screen %}
    
    {% for flashMessage in app.session.flashbag.get('success') %}
        {% if loop.first %}
            <div class="alert alert-success" role="alert">
        {% endif %}
                <i><span class="glyphicon glyphicon-ok-sign"></span> {{ flashMessage }}</i>
        {% if loop.last %}        
            </div>
        {% endif %}
    {% endfor %}

    <div class="panel panel-default">
        <div class="panel-body">
            <div class="row">
                <div class="col-md-3">
                    <div class="thumbnail">
                    {% if rucher.image is not null %}
                        <img src="{{ asset(rucher.image.webPath) }}" alt="{{ rucher.image.alt }}">
                    {% else %}
                        <img src="../../../../logo.gif" alt="logo">
                    {% endif %} 
                    </div>
                </div>
                <div class="col-md-5">
                    <h3 class="panel-title"><strong><font size="5">Rucher {{ rucher.nom }}</font></strong></h3>
                </div>
                <div class="col-md-4">
                    <div class="pull-right">
                        <a title="Editer" data-toggle="modal" href="{{ path('kg_beekeeping_management_add_rucher', { 'exploitation_id' : rucher.exploitation.id }) }}" class="btn btn-primary"><span class="glyphicon glyphicon-pencil"></span> Editer</a>
                        <a title="Supprimer" data-toggle="modal" href="{{ path('kg_beekeeping_management_delete_rucher', { 'rucher_id' : rucher.id }) }}" class="btn btn-danger"><span class="glyphicon glyphicon-trash"></span> Supprimer</a>
                    </div> 
                </div>        
            </div>
                    
            <hr>
            
            <div class="row">
                <div class="col-md-6">    
                    <div id="weather"
                         data-latitude="{{ rucher.localisation.latitude }}"
                         data-longitude="{{ rucher.localisation.longitude }}">                   
                    </div>
                </div>
                    
                <div class="col-md-6">
                    <div id="map" 
                         class="thumbnail" 
                         data-latitude="{{ rucher.localisation.latitude }}"
                         data-longitude="{{ rucher.localisation.longitude }}">
                    </div> 
                </div>
            </div>
            
            <hr>
               
            <div class="row">
                <div class="col-md-12">
                    <div class="panel panel-primary">
                        <div class="panel-heading">
                            <span class="glyphicon glyphicon-list"></span> Liste des ruches
                            <a title="Créer une ruche" data-toggle="modal" href="{{ path('kg_beekeeping_management_add_ruche', { 'rucher_id' : rucher.id }) }}" class="btn btn-info btn-xs pull-right"><span class="glyphicon glyphicon-plus-sign"></span> Créer une ruche</a>
                        </div>
                        <div class="panel-body">
                            <ul class="list-group">
                                {% for ruche in ruches %}
                                    <li class="list-group-item">
                                        {{ ruche.nom }}
                                        <div class="pull-right action-buttons">
                                            <a title="Afficher la ruche" href="{{ path('kg_beekeeping_management_view_ruche', { 'ruche_id': ruche.id }) }}" class="btn btn-xs btn-success pull-right"><span class="glyphicon glyphicon-eye-open"></span> Afficher</a>
                                        </div>
                                    </li>
                                {% endfor %}
                            </ul>
                        </div>
                        <div class="panel-footer">
                            <div class="row">
                                <div class="col-md-6">
                                    <span class="label label-info">{{ nbRuches }} ruches</span>
                                </div>
                                <div class="col-md-6">
                                    {% include "KGBeekeepingManagementBundle::pagination.html.twig" %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>              
        </div>
    </div>
{% endblock %}