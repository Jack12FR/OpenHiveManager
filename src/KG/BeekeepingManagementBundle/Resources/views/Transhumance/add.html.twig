{% extends "KGBeekeepingManagementBundle::layout.html.twig" %}

{% block stylesheets %}
    {{ parent() }}
    {{ form_stylesheet(form) }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% javascripts '@KGBeekeepingManagementBundle/Resources/public/js/transhumance/add.js'%}
        <script src="{{ asset_url }}" type="text/javascript"></script>  
        <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
        <script src="{{ path('fos_js_routing_js', {'callback': 'fos.Router.setData'}) }}"></script>
    {% endjavascripts %}    
    {{ form_javascript(form) }}
{% endblock %}

{% block title %}{{ parent() }} - Transhumer une ruche{% endblock %}

{% block menu %}
    {% include 'KGBeekeepingManagementBundle::menuRuche.html.twig' %}
{% endblock menu %}

{% block panel_title %}
    <div class="row">
        <div class="col-xs-12">
            <h4>Création d'une transhumance</h4>
        </div>
    </div>
{% endblock %}
    
{% block panel_body %}
              
    {{ form_start(form, { 'style': 'horizontal', 'col_size': 'md' }) }}
        {{ form_row(form.date, {'label': 'Date :', 'label_col': 4, 'widget_col': 5})  }}
        {{ form_row(form.rucher, {'label': 'Rucher :', 'label_col': 4, 'widget_col': 5})  }}
        {{ form_row(form.emplacementto, {'label': 'Emplacement :', 'label_col': 4, 'widget_col': 5})  }}
    {{ form_rest(form) }}

    <div class="form-group">
        <div class="col-md-12">
            <button type="submit" class="btn btn-primary pull-right">
                {{ icon('floppy-o') }} Sauvegarder
            </button>
        </div>        
    </div>

    {{ form_end(form) }}         

{% endblock %}