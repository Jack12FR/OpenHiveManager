{# src/KG/BeekeepingManagementBundle/Resources/views/Colonnie/view.html.twig #}

{% extends "KGBeekeepingManagementBundle::layout.html.twig" %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}

{% block title %}{{ parent() }} - Visite{% endblock %}

{% block breadcrumbs %}
    {{ parent() }}
    <a href="{{ path('kg_beekeeping_management_view_exploitation', { 'exploitation_id': colonnie.exploitation.id }) }}" class="btn btn-info">{{ colonnie.exploitation.nom }}</a>
    <a href="{{ path('kg_beekeeping_management_view_colonnie', { 'colonnie_id': colonnie.id }) }}" class="btn btn-info">{{ colonnie.nom }}</a>
{% endblock %} 

{% block screen %}  
    {% for flashMessage in app.session.flashbag.get('success') %}
        {% if loop.first %}
            <div class="alert alert-success" role="alert">
        {% endif %}
                <i><span class="glyphicon glyphicon-ok-sign"></span> {{ flashMessage }}</i>
        {% if loop.last %}        
            </div>
        {% endif %}
    {% endfor %}

    <div class="panel panel-default">
        <div class="panel-body">
            <div class="row">
                <div class="col-md-5">
                    <h3 class="panel-title"><strong><font size="5">Colonnie {{ colonnie.nom }}</font></strong></h3>
                </div>
                <div class="col-md-4">
                    <div class="pull-right">
                        {#<a title="Editer" data-toggle="modal" href="{{ path('kg_beekeeping_management_add_ruche', { 'rucher_id' : rucher.id }) }}" class="btn btn-primary"><span class="glyphicon glyphicon-pencil"></span> Editer</a>#}
                        <a title="Supprimer" data-toggle="modal" href="{{ path('kg_beekeeping_management_delete_colonnie', { 'colonnie_id' : colonnie.id }) }}" class="btn btn-danger"><span class="glyphicon glyphicon-trash"></span> Supprimer</a>
                    </div> 
                </div>        
            </div>
        </div>
    </div>
{% endblock %}