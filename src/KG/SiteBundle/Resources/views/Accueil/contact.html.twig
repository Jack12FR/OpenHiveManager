{# src/KG/SiteBundle/Resources/views/Accueil/contact.html.twig #}

{% extends "KGSiteBundle::layout.html.twig" %}

{% block stylesheets %}
    {% stylesheets filter='cssrewrite, ?uglifycss'
            'assets/css/icons/icomoon/styles.css'
            'assets/css/icons/fontawesome/styles.min.css'
            'assets/css/bootstrap.css'
            'assets/css/core.css'
            'assets/css/components.css'
            'assets/css/colors.css'
        %}
        <link rel="stylesheet" href="{{ asset_url }}" type="text/css">
    {% endstylesheets %}
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,300,100,500,700,900" rel="stylesheet" type="text/css">
{% endblock %}

{% block javascripts %}
    {% javascripts filter='?uglifyjs2'
            'assets/js/plugins/loaders/pace.min.js' 
            'assets/js/core/libraries/jquery.min.js'
            'assets/js/core/libraries/bootstrap.min.js'
            'assets/js/plugins/loaders/blockui.min.js'
            'assets/js/plugins/ui/nicescroll.min.js'
            'assets/js/pages/layout_fixed_custom.js'
            'assets/js/core/app.js'
    %}
        <script src="{{ asset_url }}" type="text/javascript"></script>
    {% endjavascripts %}    
        <script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src=p+"://platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script>
        <div id="fb-root"></div>
        <script>
            (function(d, s, id) {
                var js, fjs = d.getElementsByTagName(s)[0];
                if (d.getElementById(id)) return;
                js = d.createElement(s); js.id = id;
                js.src = "//connect.facebook.net/fr_FR/sdk.js#xfbml=1&version=v2.5";
                fjs.parentNode.insertBefore(js, fjs);
            }
            (document, 'script', 'facebook-jssdk'));
        </script>
    {{ parent() }}
{% endblock %} 

{% block sitetitle %}{{ parent() }} - Contact{% endblock %}

{% block mainnavbar %}
    {% include 'KGSiteBundle::mainnavbar.html.twig' %}
{% endblock %}

{% block pagecontainer %}
    <div class="page-container login-container">

        <!-- Page content -->
        <div class="page-content">

            <!-- Main content -->
            <div class="content-wrapper">

                <!-- Content area -->
                <div class="content">

                    <div class="row">
                        <div class="col-md-12">
                            <!-- Simple panel -->
                            <div class="panel panel-flat">
                                <div class="panel-heading">
                                    <h2 class="panel-title">Contactez-nous</h2>
                                </div>

                                <div class="panel-body">
                                    <div class="row">
                                        <div class="col-md-12">
                                            N'hésitez pas à nous contacter, nous serons toujours là pour vous répondre ! Nous sommes joignables par mail, à l'adresse <a href="mailto:contact@openhivemanager.org">contact@openhivemanager.org</a>, ou via Twitter ou Facebook (ci-dessous ou depuis votre page personnelle).
                                        </div>
                                    </div>    
                                    <div class="row">
                                        <div class="col-md-6">
                                            <h3>Twitter</h3>
                                            <a class="twitter-timeline" data-dnt="true" href="https://twitter.com/openhivemanager" data-widget-id="692345637002698754">Tweets de @openhivemanager</a>   
                                        </div>
                                        <div class="col-md-6">
                                            <h3>Facebook</h3>
                                           <div class="fb-page" data-href="https://www.facebook.com/openhivemanager/" data-tabs="messages, timeline, events" data-width="500" data-hide-cta="true" data-small-header="false" data-adapt-container-width="true" data-hide-cover="true" data-show-facepile="false"><div class="fb-xfbml-parse-ignore"><blockquote cite="https://www.facebook.com/openhivemanager/"><a href="https://www.facebook.com/openhivemanager/">Openhivemanager</a></blockquote></div></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- /simple panel -->                                     
                        </div>
                    </div>
                                            
                    <!-- Footer -->
                    <div class="footer text-muted">
                        {% include 'KGSiteBundle::footer.html.twig' %} 
                    </div>
                    <!-- /footer -->

                </div>
                <!-- /content area -->

            </div>
            <!-- /main content -->

        </div>
        <!-- /page content -->

    </div> 
{% endblock %}