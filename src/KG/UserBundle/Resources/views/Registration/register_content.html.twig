{% extends 'KGUserBundle::layout.html.twig' %}
{% trans_default_domain 'FOSUserBundle' %}

{% block stylesheets %}
    {{ parent() }}
    {% stylesheets filter='cssrewrite' 
        '@KGUserBundle/Resources/public/css/register/register_panel.css'%}
        <link rel="stylesheet" href="{{ asset_url }}" type="text/css">
    {% endstylesheets %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% javascripts '@KGUserBundle/Resources/public/js/register/register_panel.js' %}
        <script src="{{ asset_url }}" type="text/javascript"></script>  
    {% endjavascripts %}
{% endblock %}

{% form_theme form "KGUserBundle::form_layout.html.twig" %}

{% block form_error %}   
    {{ form_errors(form.username) }}
    {{ form_errors(form.email) }}
    {{ form_errors(form.plainPassword.first) }}    
    {{ form_errors(form.plainPassword.second) }}
    {{ form_errors(form) }}  
{% endblock %}

{% block fos_user_content %}

    <div class="row" style="margin-top:80px">
        <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
            
            <form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register">
                {{ form_errors(form) }}
                <h2>Enregistrez vous</h2>
                
                <hr class="colorgraph">
                
                <div class="form-group">
                    {{ form_widget(form.username, {'attr': {'class': 'form-control input-lg' , 'placeholder': 'form.username'|trans , 'tabindex' : '1' } }) }}
                </div>
                
                <div class="form-group">
                    {{ form_widget(form.email, {'attr': {'class': 'form-control input-lg' , 'placeholder': 'form.email'|trans , 'tabindex' : '2' } }) }}
                </div>
                
                <div class="row">
                    <div class="col-xs-12 col-sm-6 col-md-6">
                        <div class="form-group">
                            {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control input-lg' , 'placeholder': 'form.password'|trans , 'tabindex' : '3' } }) }}
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-6 col-md-6">
                        <div class="form-group">
                            {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control input-lg' , 'placeholder': 'form.password_confirmation'|trans , 'tabindex' : '4' } }) }}
                        </div>
                    </div>
                </div>

                <hr class="colorgraph">
                
                <div class="row">
                    <div class="col-xs-12 col-md-6"><input type="submit" value="{{ 'registration.submit'|trans }}" class="btn btn-primary btn-block btn-lg" tabindex="7"></div>
                    <div class="col-xs-12 col-md-6"><a href="{{ path('fos_user_security_login') }}" class="btn btn-success btn-block btn-lg">{{ 'security.login.submit'|trans }}</a></div>
                </div>
            {{ form_end(form) }}
        </div>
    </div>            
{% endblock fos_user_content %}
                                                    

                                                        


  