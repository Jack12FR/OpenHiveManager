{% trans_default_domain 'FOSUserBundle' %}

<!-- Centered forms -->
<div class="row">
    <div class="col-md-12">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <div class="panel panel-flat">
                    <div class="panel-heading">
                        <h5 class="panel-title">Modification du mot de passe</h5>
                    </div>

                    <div class="panel-body">
                        <form action="{{ path('fos_user_change_password') }}" {{ form_enctype(form) }} method="POST" class="fos_user_change_password">
                            {{ form_widget(form) }}
                            <div>
                                <button type="submit" class="btn btn-primary">{{ 'change_password.submit'|trans }} <i class="icon-arrow-right14 position-right"></i></button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /form centered -->